---
// src/layouts/MainLayout.astro
import '../styles/global.css';
const { title } = Astro.props;
---

<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/icono.png" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | Carlos Gallardo González</title>
  </head>
  <body class="bg-[#0a0a0a] text-slate-300 font-sans selection:bg-blue-500 selection:text-white overflow-x-hidden flex flex-col min-h-screen">
    
    <div class="fixed inset-0 -z-10 h-full w-full bg-[#0a0a0a] bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.15),rgba(255,255,255,0))]"></div>

    <nav class="fixed top-0 w-full z-50 backdrop-blur-lg border-b border-white/5 bg-[#0a0a0a]/80">
      <div class="max-w-5xl mx-auto px-6 h-16 flex justify-between items-center">
        <a href="/" class="text-xl font-bold tracking-tight text-white hover:text-blue-400 transition">
          CGG<span class="text-blue-500">.</span>
        </a>
        
        <div class="flex gap-6 text-sm font-medium">
          <a href="/" class="hover:text-white transition py-2">Inicio</a>
          <a href="/proyectos" class="hover:text-white transition py-2">Proyectos</a>
        </div>
      </div>
    </nav>

    <main class="pt-24 pb-20 px-6 max-w-5xl mx-auto flex-grow animate-fade-in w-full">
      <slot />
    </main>

    <footer class="border-t border-white/5 py-8 bg-black/20 mt-auto">
      <div class="max-w-5xl mx-auto px-6 flex flex-col md:flex-row justify-between items-center gap-4">
        
        <p class="text-slate-500 text-sm">
          © 2026 Carlos Gallardo.
        </p>

        <div class="flex gap-6 items-center">
          <a href="https://github.com/Caarlosgg" target="_blank" class="text-slate-500 hover:text-white transition" aria-label="GitHub">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path></svg>
          </a>
          
          <a href="https://www.linkedin.com/in/carlos-gallardo-gonz%C3%A1lez-40b53a30a/" target="_blank" class="text-slate-500 hover:text-[#0077b5] transition" aria-label="LinkedIn">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
          </a>

          <a href="mailto:carlosgallardogonzalez14@gmail.com" class="text-slate-500 hover:text-white transition" aria-label="Email">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
          </a>
        </div>

      </div>
    </footer>

  </body>
</html>

<style>
  .animate-fade-in {
    animation: fadeIn 0.5s ease-out forwards;
  }
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>