---
import MainLayout from '../layouts/MainLayout.astro';

// Datos de experiencia (Enfocados en IA y Big Data según tu CV)
const experience = [
  {
    date: "Actualidad",
    title: "Especialización en IA y Big Data",
    company: "Mercedarias Granada",
    desc: "Profundización en modelos predictivos, Machine Learning y arquitecturas de datos masivos. Desarrollo de soluciones prácticas aplicadas a problemas reales."
  },
  {
    date: "2025",
    title: "Software & Web Developer",
    company: "Deditec Jaén",
    desc: "Optimización de entornos corporativos y mejora de UX. Mantenimiento correctivo de sistemas y despliegue de nuevas funcionalidades."
  },
  {
    date: "2025",
    title: "Full Stack Developer (Finanzas)",
    company: "Dashboard Financiero",
    desc: "Arquitectura y desarrollo de una aplicación integral para análisis financiero masivo usando Java Spring Boot y MongoDB."
  },
  {
    date: "2023 - 2025",
    title: "Desarrollo de Aplicaciones Multiplataforma",
    company: "IES Virgen del Carmen",
    desc: "Formación técnica sólida en desarrollo backend, frontend y bases de datos relacionales."
  }
];

// Metodologías (Lo que te hace Pro)
const methodologies = [
  {
    title: "Arquitectura Limpia",
    icon: "layers",
    desc: "Código modular, escalable y fácil de mantener. Priorizo la calidad del software a largo plazo."
  },
  {
    title: "Metodologías Ágiles",
    icon: "repeat",
    desc: "Experiencia trabajando en entornos iterativos (Scrum) con entregas continuas y feedback rápido."
  },
  {
    title: "Enfoque Data-Driven",
    icon: "chart",
    desc: "No solo programo; analizo. Integro la inteligencia de datos en la toma de decisiones de desarrollo."
  }
];
---

<MainLayout title="Inicio">
  
  <section class="flex flex-col-reverse md:flex-row items-center justify-between gap-12 mt-10 md:mt-20 mb-24">
    
    <div class="flex-1 space-y-6 text-center md:text-left">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-blue-500/10 border border-blue-500/20 text-blue-400 text-xs font-bold uppercase tracking-widest">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-blue-500"></span>
        </span>
        Open to Work
      </div>
      
      <h1 class="text-4xl md:text-6xl font-extrabold text-white leading-tight">
        Impulsando la innovación con <br class="hidden md:block"/>
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 via-purple-500 to-blue-600 animate-gradient-x">
          IA & Big Data
        </span>
      </h1>
      
      <p class="text-lg text-slate-400 max-w-lg mx-auto md:mx-0 leading-relaxed">
        Soy <strong>Carlos Gallardo</strong>, Desarrollador de Software especializado en fusionar arquitecturas robustas con modelos de IA para crear productos digitales de alto impacto.
      </p>

      <div class="flex flex-wrap gap-3 justify-center md:justify-start pt-4">
        <a href="/proyectos" class="px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-500 transition shadow-[0_0_20px_rgba(37,99,235,0.3)] hover:scale-105">
          Ver Proyectos
        </a>
        
        <a href="https://github.com/Caarlosgg" target="_blank" class="px-6 py-3 bg-[#24292e] text-white font-semibold rounded-lg hover:bg-[#3b4148] transition flex items-center gap-2 border border-slate-700">
          <svg class="w-5 h-5 fill-white" viewBox="0 0 24 24" aria-hidden="true"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path></svg>
          GitHub
        </a>

        <a href="https://www.linkedin.com/in/carlos-gallardo-gonz%C3%A1lez-40b53a30a/" target="_blank" class="px-6 py-3 border border-slate-700 text-slate-300 font-semibold rounded-lg hover:bg-[#0077b5] hover:text-white hover:border-[#0077b5] transition flex items-center gap-2 group">
          <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
          LinkedIn
        </a>
      </div>
    </div>

    <div class="relative w-72 h-72 md:w-[450px] md:h-[450px] shrink-0 group">
      <div class="absolute inset-0 bg-gradient-to-tr from-blue-600/30 to-purple-600/30 rounded-full blur-3xl scale-90 group-hover:scale-100 transition duration-700"></div>
      <div class="relative w-full h-full rounded-full overflow-hidden border border-white/10 shadow-2xl bg-[#0a0a0a]">
        <img 
          src="/carlos.png" 
          alt="Carlos Gallardo" 
          class="w-full h-full object-cover object-top scale-105 group-hover:scale-110 transition duration-700 ease-in-out grayscale group-hover:grayscale-0"
        />
      </div>
      <div class="absolute bottom-10 -left-4 bg-slate-900/90 backdrop-blur border border-white/10 p-3 rounded-xl shadow-xl flex items-center gap-3 animate-float">
        <div class="bg-blue-500/20 p-2 rounded-lg text-blue-400">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2v20M2 12h20M4.93 4.93l14.14 14.14M4.93 19.07L19.07 4.93"/></svg>
        </div>
        <div>
          <p class="text-xs text-slate-400 uppercase font-bold">Experto en</p>
          <p class="text-sm text-white font-semibold">AI & Big Data</p>
        </div>
      </div>
    </div>
  </section>

  <section class="py-20 border-y border-white/5 bg-white/[0.02]">
    <div class="max-w-6xl mx-auto px-6">
      <p class="text-center text-sm text-slate-500 mb-12 font-mono uppercase tracking-wider">Arsenal Tecnológico</p>
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        
        <div class="p-6 rounded-2xl bg-slate-900/50 border border-white/5 hover:border-blue-500/30 transition group">
          <h4 class="text-white font-bold mb-4 flex items-center gap-2">
            <span class="w-2 h-2 rounded-full bg-blue-500"></span> Lenguajes
          </h4>
          <ul class="text-slate-400 text-sm space-y-2">
            <li class="flex items-center gap-2 hover:text-white transition"><span class="text-blue-400">▹</span> Python (Experto)</li>
            <li class="flex items-center gap-2 hover:text-white transition"><span class="text-blue-400">▹</span> Java</li>
            <li class="flex items-center gap-2 hover:text-white transition"><span class="text-blue-400">▹</span> JavaScript (ES6+)</li>
            <li class="flex items-center gap-2 hover:text-white transition"><span class="text-slate-600">▹</span> Kotlin</li>
            <li class="flex items-center gap-2 hover:text-white transition"><span class="text-slate-600">▹</span> R</li>
          </ul>
        </div>

        <div class="p-6 rounded-2xl bg-slate-900/50 border border-white/5 hover:border-purple-500/30 transition group">
          <h4 class="text-white font-bold mb-4 flex items-center gap-2">
            <span class="w-2 h-2 rounded-full bg-purple-500"></span> IA & Data
          </h4>
          <ul class="text-slate-400 text-sm space-y-2">
            <li class="flex items-center gap-2 hover:text-white transition"><span class="text-purple-400">▹</span> TensorFlow / PyTorch</li>
            <li class="flex items-center gap-2 hover:text-white transition"><span class="text-purple-400">▹</span> Scikit-learn</li>
            <li class="flex items-center gap-2 hover:text-white transition"><span class="text-purple-400">▹</span> Pandas & NumPy</li>
            <li class="flex items-center gap-2 hover:text-white transition"><span class="text-purple-400">▹</span> Redes Neuronales</li>
          </ul>
        </div>

        <div class="p-6 rounded-2xl bg-slate-900/50 border border-white/5 hover:border-orange-500/30 transition group">
          <h4 class="text-white font-bold mb-4 flex items-center gap-2">
            <span class="w-2 h-2 rounded-full bg-orange-500"></span> Full Stack
          </h4>
          <ul class="text-slate-400 text-sm space-y-2">
            <li class="flex items-center gap-2 hover:text-white transition"><span class="text-orange-400">▹</span> Java Spring Boot</li>
            <li class="flex items-center gap-2 hover:text-white transition"><span class="text-orange-400">▹</span> React.js</li>
            <li class="flex items-center gap-2 hover:text-white transition"><span class="text-orange-400">▹</span> HTML5 / CSS3</li>
            <li class="flex items-center gap-2 hover:text-white transition"><span class="text-slate-600">▹</span> WordPress / XML</li>
          </ul>
        </div>

        <div class="p-6 rounded-2xl bg-slate-900/50 border border-white/5 hover:border-emerald-500/30 transition group">
          <h4 class="text-white font-bold mb-4 flex items-center gap-2">
            <span class="w-2 h-2 rounded-full bg-emerald-500"></span> Data & Ops
          </h4>
          <ul class="text-slate-400 text-sm space-y-2">
            <li class="flex items-center gap-2 hover:text-white transition"><span class="text-emerald-400">▹</span> PostgreSQL / MySQL</li>
            <li class="flex items-center gap-2 hover:text-white transition"><span class="text-emerald-400">▹</span> MongoDB (NoSQL)</li>
            <li class="flex items-center gap-2 hover:text-white transition"><span class="text-emerald-400">▹</span> Docker</li>
            <li class="flex items-center gap-2 hover:text-white transition"><span class="text-emerald-400">▹</span> Git / GitHub</li>
          </ul>
        </div>

      </div>
    </div>
  </section>

  <section class="py-24">
    <div class="text-center max-w-2xl mx-auto mb-16">
      <h2 class="text-3xl font-bold text-white mb-4">Más allá del código</h2>
      <p class="text-slate-400">
        No se trata solo de escribir líneas, sino de construir sistemas eficientes. Mi metodología de trabajo garantiza resultados escalables y mantenibles.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {methodologies.map((item) => (
        <div class="p-6 rounded-2xl bg-slate-900/40 border border-white/10 hover:border-blue-500/30 transition duration-300 group">
          <div class="w-12 h-12 bg-blue-500/10 rounded-lg flex items-center justify-center text-blue-400 mb-4 group-hover:scale-110 transition">
             {item.icon === 'layers' && <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path></svg>}
             {item.icon === 'repeat' && <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path></svg>}
             {item.icon === 'chart' && <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 002 2h2a2 2 0 002-2z"></path></svg>}
          </div>
          <h3 class="text-xl font-bold text-white mb-2">{item.title}</h3>
          <p class="text-slate-400 text-sm leading-relaxed">{item.desc}</p>
        </div>
      ))}
    </div>
  </section>

  <section class="py-24 border-t border-white/5">
    <div class="grid md:grid-cols-2 gap-12">
      <div>
        <h2 class="text-3xl font-bold text-white mb-6">Trayectoria <br /> <span class="text-blue-500">Profesional</span></h2>
        <p class="text-slate-400 mb-8">
          [cite_start]Un recorrido enfocado en el crecimiento técnico constante, desde el desarrollo de aplicaciones multiplataforma hasta la especialización avanzada en IA[cite: 61, 83].
        </p>
        <a href="/Carlos_Gallardo_CV.pdf" download class="inline-flex items-center gap-2 text-white border-b border-blue-500 pb-1 hover:text-blue-400 transition">
          Descargar CV Completo
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path></svg>
        </a>
      </div>

      <div class="relative border-l border-slate-800 ml-3 space-y-12">
        {experience.map((item) => (
          <div class="relative pl-8">
            <span class={`absolute -left-[5px] top-2 w-2.5 h-2.5 rounded-full ${item.date === "Actualidad" ? "bg-blue-500 shadow-[0_0_10px_rgba(59,130,246,0.5)]" : "bg-slate-700"}`}></span>
            
            <span class="text-xs font-mono text-blue-400 mb-1 block">{item.date}</span>
            <h3 class="text-lg font-bold text-white">{item.title}</h3>
            <p class="text-sm text-slate-500 mb-2">{item.company}</p>
            <p class="text-slate-400 text-sm leading-relaxed max-w-sm">
              {item.desc}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-20 text-center">
    <div class="bg-gradient-to-r from-blue-900/20 to-purple-900/20 border border-white/10 rounded-3xl p-12 max-w-4xl mx-auto relative overflow-hidden">
      
      <div class="absolute inset-0 bg-grid-white/[0.02] bg-[length:30px_30px]"></div>

      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6 relative z-10">¿Hablamos?</h2>
      <p class="text-slate-400 mb-8 max-w-xl mx-auto relative z-10">
        Estoy disponible para nuevos retos. Puedes enviarme un correo directamente o contactarme por LinkedIn.
      </p>

      <div class="flex flex-col md:flex-row justify-center items-center gap-4 relative z-10">
        
        <a href="mailto:carlosgallardogonzalez14@gmail.com" class="px-8 py-3 bg-white text-slate-900 font-bold rounded-lg hover:bg-slate-200 transition flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
          Enviar Correo
        </a>

        <button id="copyBtn" class="px-8 py-3 border border-white/20 text-white font-bold rounded-lg hover:bg-white/10 transition flex items-center gap-2 group">
          <svg id="copyIcon" class="w-5 h-5 text-slate-400 group-hover:text-white transition" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2v1m-6 0h6"></path></svg>
          <span id="copyText">Copiar Email</span>
        </button>

      </div>

      <p class="mt-6 text-sm text-slate-500 font-mono select-all">
        carlosgallardogonzalez14@gmail.com
      </p>

    </div>
  </section>

<script>
  const copyBtn = document.getElementById('copyBtn');
  const copyText = document.getElementById('copyText');
  const email = "carlosgallardogonzalez14@gmail.com";

  copyBtn.addEventListener('click', () => {
    navigator.clipboard.writeText(email).then(() => {
      // Feedback visual
      const originalText = copyText.innerText;
      copyText.innerText = "¡Copiado!";
      copyBtn.classList.add('bg-emerald-500/20', 'border-emerald-500/50', 'text-emerald-300');
      
      setTimeout(() => {
        copyText.innerText = originalText;
        copyBtn.classList.remove('bg-emerald-500/20', 'border-emerald-500/50', 'text-emerald-300');
      }, 2000);
    });
  });
</script>

<style>
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }
</style>